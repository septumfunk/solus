{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug CLI",
      "request": "launch",
      "program": "${workspaceRoot}/build/solus",
      "args": ["${input:cliMode}", "sol.tests/${input:scriptName}.sol"],
      "cwd": "${workspaceRoot}",

      // Defaults (Linux/macOS)
      "type": "lldb",
      "env": {
        "ASAN_OPTIONS": "detect_leaks=0:disable_coredump=0",
        "LSAN_OPTIONS": "detect_leaks=0"
      },

      // Windows overrides
      "windows": {
        "type": "cppvsdbg",
        "program": "${workspaceRoot}/build/tests/${input:testName}.exe",
      }
    },

    {
      "name": "Sanitize Test",
      "request": "launch",
      "program": "${workspaceRoot}/build/sanitized/tests/${input:testName}",
      "args": [],
      "cwd": "${workspaceRoot}",

      // Defaults for Linux/macOS
      "type": "lldb",

      // Windows: sanitized builds usually not supported
      "windows": {
        "type": "cppvsdbg",
        "program": "${workspaceRoot}/build/sanitized/tests/${input:testName}.exe"
      }
    },
  ],

  "inputs": [
    {
      "id": "testName",
      "type": "promptString",
      "description": "Test Name",
      "default": "default"
    },

    {
      "id": "cliMode",
      "type": "promptString",
      "description": "CLI Mode",
      "default": "run"
    },
    {
      "id": "scriptName",
      "type": "promptString",
      "description": "Script Name",
      "default": "default"
    }
  ]
}
